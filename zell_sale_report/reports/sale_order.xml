<?xml version="1.0"?>
<odoo>

    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='sale_information']" position="inside">
            <strong class="small">Transportadora: </strong> <span style="font-size:11px" t-field="doc.transportadora"></span> <br />
        </xpath>
        <xpath expr="//ul" position="after">
          <span class="small"><b>GARANTIA</b><span>: O INSTRUMENTAL ABAIXO É GARANTIDO POR UM PERÍODO DE  </span><b t-field="doc.garantia" /><span>  MESES A PARTIR DA ENTREGA.</span></span>
        </xpath>
        <xpath expr="//span[@t-field='l.sequence']" position="replace">
              <span t-field="l.num_item" />
        </xpath>
    </template>

</odoo>
